---
import tortellini from "../assets/tortellini.jpg";
import somePizza from "../assets/somePizza.jpg";
import rosemary from "../assets/rosemary.jpg";
import { Image } from "astro:assets";
---

<div>
  <div
    class="flex justify-center md:pt-4 xl:pt-16 items-center w-full 2xl:pt-24"
  >
    <div class="xl:flex flex flex-col 2xl:flex-row 2xl:gap-x-10 gap-y-3">
      <Image
        src={tortellini}
        width={750}
        quality={50}
        format="avif"
        alt="picture of toretllini"
      />
      <Image
        src={somePizza}
        height={428}
        quality={50}
        format="avif"
        alt="picture of pizza"
      />
    </div>
  </div>
  <div class="2xl:flex justify-center 2xl:pt-24 2xl:h-[600px] gap-x-10">
    <div
      class="flex justify-center items-center h-72 2xl:order-1 2xl:w-2/4 2xl:h-full"
    >
      <div class="2xl:flex 2xl:justify-center 2xl:pr-32">
        <div
          class="w-60 2xl:w-96 xl:w-96 font-serif sm:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"
        >
          <p class="pb-10 2xl:pb-16 text-italia">Opening Hours</p>
          <p class="pb-1 2xl:pb-4 text-stone-800">Mon - Fri: 12pm - 10pm</p>
          <p class="pb-1 2xl:pb-4 text-stone-800">Saturday: 11am - 10pm</p>
          <p class="pb-1 2xl:pb-4 text-stone-800">Sunday: 11am - 11pm</p>
        </div>
      </div>
    </div>
    <div class="flex justify-center 2xl:justify-end 2xl:w-2/4">
      <Image
        src={rosemary}
        height={500}
        quality={40}
        format="avif"
        alt="picture of dish with wine and pizza"
      />
    </div>
  </div>
</div>
