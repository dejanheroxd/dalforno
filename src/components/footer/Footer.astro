    height: 230px;
  }
</style>

<script>
  var map = L.map("map").setView([38.95629413342399, 20.754823130706793], 18);

  L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
    attribution:
      '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
  }).addTo(map);
  var marker = L.marker([38.95629413342399, 20.754823130706793]).addTo(map);
</script>

